@model CrewViewModel
@{ string title = Model.Action + " Crew";
    ViewBag.Title = title; }

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h1 id="contactHeader">@ViewBag.Title</h1>
<form asp-action="Save" method="post" class="container">
    <div class="row form-group">
        <label asp-for="CurrentCrew.CrewForemanID">Crew Foreman</label>
        <select asp-for="CurrentCrew.CrewForemanID"
                asp-items="@(new SelectList(Model.GetEmployees,
                                "EmployeeID", "EmployeeFullName", Model.GetEmployees.ToList()))"
                class="form-control">
            <option value="">Select a Foreman</option>
        </select>
        <div class="col">
            <span asp-validation-for="CurrentCrew.CrewForemanID"></span>
            <span asp-validation-for="DistinctForeman"></span>
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="CurrentCrew.CrewMember1ID">Crew Member 1</label>
        <select asp-for="CurrentCrew.CrewMember1ID"
                asp-items="@(new SelectList(Model.GetEmployees,
                                "EmployeeID", "EmployeeFullName", Model.GetEmployees.ToList()))"
                class="form-control">
            <option value="">Select a Crew Member</option>
        </select>
        <div class="col">
            <span asp-validation-for="CurrentCrew.CrewMember1ID"></span>
            <span asp-validation-for="DistinctMember1"></span>
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="CurrentCrew.CrewMember2ID">Crew Member 2</label>
        <select asp-for="CurrentCrew.CrewMember2ID"
                asp-items="@(new SelectList(Model.GetEmployees,
                                "EmployeeID", "EmployeeFullName", Model.GetEmployees.ToList()))"
                class="form-control">
            <option value="">Select a Crew Member</option>
        </select>
        <div class="col">
            <span asp-validation-for="CurrentCrew.CrewMember2ID"></span>
            <span asp-validation-for="DistinctMember2"></span>
        </div>
    </div>
    <input type="hidden" asp-for="CurrentCrew.CrewID" />
    <input type="hidden" asp-for="CurrentCrew.CrewForemanID" />
    <input type="hidden" asp-for="CurrentCrew.CrewMember1ID" />
    <input type="hidden" asp-for="CurrentCrew.CrewMember2ID" />
    <button type="submit" class="btn btn-primary" id="AEButton">Save</button>
    <a asp-action="List" class="btn btn-danger" id="AEButton">Cancel</a>
</form>


