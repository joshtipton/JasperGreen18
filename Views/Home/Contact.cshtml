@model ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
}

@section scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<body id="aboutBackground">
    <br />
    <h1 id="contactHeader">Contact Form</h1>
    <form asp-action="Index" asp-controller="Home" method="post">
        <div class="form-group">
            <label style="color:white" asp-for="Name">Full Name:</label>
            <input class="form-control" type="text" asp-for="Name" />
            <div class="col">
                <span asp-validation-for="Name" id="aboutStyle"></span>
            </div>
        </div>
        <div class="form-group">
            <label style="color:white" asp-for="Email">Email:</label>
            <input class="form-control" type="email" asp-for="Email" />
            <div class="col">
                <span asp-validation-for="Email" id="aboutStyle"></span>
            </div>
        </div>
        <div class="form-group">
            <label style="color:white" asp-for="Message">Message:</label>
            <textarea class="form-control" asp-for="Message"></textarea>
            <div class="col">
                <span asp-validation-for="Message" id="aboutStyle"></span>
            </div>
        </div>
        <div>
            <button asp-type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>
</body>