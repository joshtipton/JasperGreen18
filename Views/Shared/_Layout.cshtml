@* Create the variables to get the route value of the requested view*@
@{ string controller = ViewContext.RouteData.Values["controller"].ToString();
    string action = ViewContext.RouteData.Values["action"].ToString(); }

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jasper Green - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @*Used for Animations*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="icon" href="~/images/Fav.ico"> @* Web Browser Icon *@

    @* Insert the content from a section into the layout *@
    @RenderSection("scripts", false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/JasperGreenLogo.png" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse container" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto" id="navBorder">
                    <a id="navStyle" class="nav-item nav-link
            @(controller == "Home" && action == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                    <a id="navStyle" class="nav-item nav-link
            @(controller == "Employee" ? "active" : "")" asp-controller="Employee" asp-action="List">Employees</a>
                    <a id="navStyle" class="nav-item nav-link
            @(controller == "Customer" ? "active" : "")" asp-controller="Customer" asp-action="List">Customers</a>
                    <a id="navStyle" class="nav-item nav-link
            @(controller == "Property" ? "active" : "")" asp-controller="Property" asp-action="List">Properties</a>
                    <a id="navStyle" class="nav-item nav-link
            @(controller == "Payment" ? "active" : "")" asp-controller="Payment" asp-action="List">Payments</a>
                    <a id="navStyle" class="nav-item nav-link
            @(controller == "Crew" ? "active" : "")" asp-controller="Crew" asp-action="List">Crews</a>
                    <a id="navStyle" class="nav-item nav-link
            @(controller == "ProvideService" ? "active" : "")" asp-controller="ProvideService" asp-action="List">Services</a>
                </div>
                <div class="navbar-nav navbar-right" id="navBorder">
                    <a id="navStyle" class="nav-item nav-link
            @(controller == "Home" && action=="About" ? "active" : "" )" asp-controller="Home" asp-action="About">About</a>
                    <a id="navStyle" class="nav-item nav-link
            @(controller == "Home" && action=="Contact" ? "active" : "" )" asp-controller="Home" asp-action="Contact">Contact Us</a>
                </div>
            </nav>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">&copy; @DateTime.Now.Year - Jasper Green - 18</div>
    </footer>
</body>
</html>